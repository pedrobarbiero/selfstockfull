<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, algo deu errado! Por favor veja os erros abaixo.</p>      
    </div>
  <% end %>

  <%= label f, :cidade_id %>
  <%= select f, :cidade_id, @cidades, class: "form-control" %>
  <%= error_tag f, :cidade_id %>

  <%= label f, :logradouro %>
  <%= text_input f, :logradouro %>
  <%= error_tag f, :logradouro %>

  <%= label f, :numero %>
  <%= text_input f, :numero %>
  <%= error_tag f, :numero %>

  <%= label f, :cep %>
  <%= text_input f, :cep %>
  <%= error_tag f, :cep %>

  <%= label f, :bairro %>
  <%= text_input f, :bairro %>
  <%= error_tag f, :bairro %>

  <div>
    <%= submit "Salvar" %>
  </div>
<% end %>
