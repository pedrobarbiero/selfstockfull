<div class="default-form">     
  <h1 class="h1">Clientes</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Data nascimento</th>
        <th>Email</th>
        <th>Cpf</th>
        <th>Sexo</th>
        <th>Telefone</th>

        <th></th>
      </tr>
    </thead>
    <tbody>
  <%= for cliente <- @clientes do %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.data_nascimento %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.cpf %></td>
        <td><%= cliente.sexo %></td>
        <td><%= cliente.telefone %></td>

        <td>
          <%= link "Visualizar", to: Routes.cliente_path(@conn, :show, cliente), class: "btn" %>
          <%= link "Editar", to: Routes.cliente_path(@conn, :edit, cliente), class: "btn" %>
          <%= link "Excluir", to: Routes.cliente_path(@conn, :delete, cliente), method: :delete, data: [confirm: "Tem certeza?"], class: "btn" %>
        </td>
      </tr>
  <% end %>
    </tbody>
  </table>

  <span><%= link "Novo", to: Routes.cliente_path(@conn, :new), class: "btn" %></span>
</div>
